@{
    ViewData["Title"] = "SignUp";

    string message = string.Empty;

    if (TempData["Success"]!=null)
    {
        message = TempData["Success"].ToString();
    }
}

@model SignUpViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if (!string.IsNullOrWhiteSpace(message))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="col-md-6 offset-md-3">
    <div class="row">
        <h3>Kullanıcı Kayıt Formu</h3>

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
            
        </div>

        <form asp-action="SignUp" asp-controller="Home" method="post">
            <div class="mb-3">
                <label for="exampleInputUserName" asp-for="UserName" class="form-label"></label>
                <input type="text" asp-for="UserName" class="form-control" id="exampleInputUserName" aria-describedby="emailHelp">
                <div id="usernameHelp" class="form-text"></div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" asp-for="Email" class="form-label"></label>
                <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text"></div>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>


            <div class="mb-3">
                <label for="exampleInputPhoneNumber" asp-for="PhoneNumber" class="form-label"></label>
                <input type="tel" asp-for="PhoneNumber" class="form-control" id="exampleInputPhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" asp-for="Password" class="form-label"></label>
                <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label for="exampleInputPassword2" asp-for="PasswordConfirm" class="form-label"></label>
                <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputPassword2">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

            </div>


            @* <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>*@


            <button type="submit" class="btn btn-success">Kayıt ol</button>

        </form>


    </div>
</div>


