@model List<AssignRoleToUserViewModel>

@{
    ViewData["Title"] = "AssignRoleToUser";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.UserId">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input asp-for="@Model[i].Exist" class="form-check-input" type="checkbox"  >
                    <label class="form-check-label" >
                      @Model[i].Name
                    </label>

                    <input asp-for="@Model[i].Name" type="hidden" >
                    <input asp-for="@Model[i].Id"  type="hidden" >

                </div>
            }

         
            <div class="form-group">
                <input type="submit" value="Rol Ata" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

